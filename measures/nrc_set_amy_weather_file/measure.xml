  <class_name>NrcSetAmyWeatherFile</class_name>
  <display_name>Nrc Set AMY Weather File</display_name>
  <description>The measure sets an AMY weather file to a model and updates its calendar year.</description>
  <modeler_description>The measure sets one of 3 hourly weather file locations. Locations options are: Ottawa, Toronto, and Windsor.
            Also sets the calendar year to the years related to the available hourly weather files (2016, 2017 and 2018). </modeler_description>
  <arguments>
    <argument>
      <name>location</name>
      <display_name>Location</display_name>
      <type>Choice</type>
      <required>true</required>
      <model_dependent>false</model_dependent>
      <default_value>ON_Toronto</default_value>
      <choices>
        <choice>
          <value>ON_Ottawa</value>
          <display_name>ON_Ottawa</display_name>
        </choice>
        <choice>
          <value>ON_Toronto</value>
          <display_name>ON_Toronto</display_name>
        </choice>
        <choice>
          <value>ON_Windsor</value>
          <display_name>ON_Windsor</display_name>
        </choice>
      </choices>
    </argument>
    <argument>
      <name>year</name>
      <display_name>Location</display_name>
      <type>Choice</type>
      <required>true</required>
      <model_dependent>false</model_dependent>
      <default_value>2016</default_value>
      <choices>
        <choice>
          <value>2016</value>
          <display_name>2016</display_name>
        </choice>
        <choice>
          <value>2017</value>
          <display_name>2017</display_name>
        </choice>
        <choice>
          <value>2018</value>
          <display_name>2018</display_name>
        </choice>
      </choices>
    </argument>
  </arguments>
